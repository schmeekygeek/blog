---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Body from '../components/Body.astro';
import Masthead from '../components/Masthead.astro';
import { Image } from '@astrojs/image/components';
import Content from '../components/Content.astro';
import Head from '../components/Head.astro';
import HeaderLink from '../components/HeaderLink.astro';
import { IoLogoGithub } from 'react-icons/io5/index.js';

const posts = (await Astro.glob('./posts/*.md')).sort(
  (a: any, b: any) =>
    new Date(b.frontmatter.createdAt).valueOf() -
    new Date(a.frontmatter.createdAt).valueOf()
);
const projects = posts.filter(post => post.frontmatter.tags.includes("Projects"));
const tutorials = posts.filter(post => post.frontmatter.tags.includes("Tutorials"));
const casual = posts.filter(post => post.frontmatter.tags.includes("Casual"));

const latestPost = posts[0];
posts.splice(0, 1);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <Body>
    <Header />
    <Masthead />
    <main class="pt-[16px]">
      <Content>
        <section>
          <HeaderLink href="https://github.com/schmeekygeek" target="_blank"><IoLogoGithub /> Visit GitHub</HeaderLink>
          <p class="text-xl">
            Welcome to my blog. This is where I write about the projects that I built, the lessons that I learned from them, tutorials, guides and other topics that I like to pen my thoughts on.
          </p>
        </section>
        <br />
        <section>
          <Head>Latest Post</Head>
          <a href={latestPost.url}>
            <div class="mb-2 opacity-70 text-base font-satoshi">
              Published on {latestPost.frontmatter.createdAt}
            </div>
            <Image 
              class="border border-slate-300 dark:border-zinc-700 rounded-xl" 
              src={latestPost.frontmatter.heroImage} 
              format ='jpg' 
              width={720*2} 
              aspectRatio={2.0} 
              alt="Thumbnail"/>
            <div class="mt-4 text-2xl font-satoshi font-400">
              {latestPost.frontmatter.title}
            </div>
            {latestPost.frontmatter.description && (
              <div class="opacity-70 text-lg">
                {latestPost.frontmatter.description}
              </div>
            )}
          </a>
        <span
          class="underline underline-offset-2 hover:text-orange-500 decoration-orange-500 text-2xl list-disc"
        ></span>
        </section>
        <br />
        <Head>Projects</Head>
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {
            projects.map(post => {
              return <li class="text-center mx-8">
                <a href={post.url}>
                  <Image
                    class="border border-slate-300 dark:border-zinc-700 rounded-xl"
                    src={post.frontmatter.heroImage}
                    fit='outside'
                    format='jpg'
                    width={720 * 2}
                    aspectRatio={2.0}
                    alt="Thumbnail"
                  />
                  <div class="mt-4 text-xl font-satoshi font-400">
                    {post.frontmatter.title}
                  </div>
                  {post.frontmatter.description && (
                    <div class="mb-4 opacity-70">
                      {post.frontmatter.description}
                    </div>
                  )}
                </a>
              </li>;
            })
          }
        </ul>
        <br />
        <Head>Tutorials</Head>
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {
            tutorials.map(post => {
              return <li class="text-center mx-8">
                <a href={post.url}>
                  <Image
                    class="border border-slate-300 dark:border-zinc-700 rounded-xl"
                    src={post.frontmatter.heroImage}
                    fit='inside'
                    format='jpg'
                    width={720 * 2}
                    aspectRatio={2.0}
                    alt="Thumbnail"
                  />
                 <div class="mt-4 text-xl font-satoshi font-400">
                    {post.frontmatter.title}
                  </div>
                  {post.frontmatter.description && (
                    <div class="mb-4 opacity-70">
                      {post.frontmatter.description}
                    </div>
                  )}
                </a>
              </li>;
            })
          }
        </ul>
        <br />
        <Head>Casual talk</Head>
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {
            casual.map(post => {
              return <li class="text-center mx-8">
                <a href={post.url}>
                  <Image
                    class="border border-slate-300 dark:border-zinc-700 rounded-xl"
                    format='jpg'
                    fit='fill'
                    src={post.frontmatter.heroImage}
                    width={720 * 2}
                    aspectRatio={2.0}
                    alt="Thumbnail"
                  />
                 <div class="mt-4 text-xl font-satoshi font-400">
                    {post.frontmatter.title}
                  </div>
                  {post.frontmatter.description && (
                    <div class="mb-4 opacity-70">
                      {post.frontmatter.description}
                    </div>
                  )}
                </a>
              </li>;
            })
          }
        </ul>
      </Content>
    </main>
    <Footer />
  </Body>
</html>
