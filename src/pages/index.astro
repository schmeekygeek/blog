---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Body from '../components/Body.astro';
import Masthead from '../components/Masthead.astro';
import Content from '../components/Content.astro';
import Head from '../components/Head.astro';
import HeaderLink from '../components/HeaderLink.astro';
import { IoLogoGithub } from 'react-icons/io5/index.js';
import BlogListTile from '../components/BlogListTile.astro';

const posts = (await Astro.glob('./posts/*.md')).sort(
  (a: any, b: any) =>
    new Date(b.frontmatter.createdAt).valueOf() -
    new Date(a.frontmatter.createdAt).valueOf()
);
const projects = posts.filter(post => post.frontmatter.tags.includes("Projects"));
const tutorials = posts.filter(post => post.frontmatter.tags.includes("Tutorials"));
const casual = posts.filter(post => post.frontmatter.tags.includes("Casual"));

const latestPost = posts[0];
posts.splice(0, 1);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <Body>
    <Header />
    <Masthead />
    <main class="pt-[16px]">
      <Content>
        <section>
          <HeaderLink href="https://github.com/schmeekygeek" target="_blank"><IoLogoGithub /> Visit GitHub</HeaderLink>
          <p class="text-xl">
            Welcome to my blog. This is where I write about the projects that I built, the lessons that I learned from building them, tutorials, guides and other topics that I like to pen my thoughts on.
          </p>
        </section>
        <br />
        <section>
          <Head>Latest Post</Head>
          <BlogListTile 
            title={latestPost.frontmatter.title}
            description={latestPost.frontmatter.description}
            heroImage={latestPost.frontmatter.heroImage}
            publishedOn={latestPost.frontmatter.createdAt}
            url={latestPost.url}
          />
        </section>
        <br />
        <Head>Projects</Head>
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {
            projects.map(post => {
              return <li class="text-center mx-8">
                <BlogListTile 
                  title={post.frontmatter.title}
                  description={post.frontmatter.description}
                  heroImage={post.frontmatter.heroImage}
                  url={post.url}
                />
              </li>;
            })
          }
        </ul>
        <br />
        <Head>Tutorials</Head>
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {
            tutorials.map(post => {
              return <li class="text-center mx-8">
                <BlogListTile 
                  title={post.frontmatter.title}
                  description={post.frontmatter.description}
                  heroImage={post.frontmatter.heroImage}
                  publishedOn={post.frontmatter.createdAt}
                  url={post.url}
                />
              </li>;
            })
          }
        </ul>
        <br />
        <Head>Casual talk</Head>
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {
            casual.map(post => {
              return <li class="text-center mx-8">
                <BlogListTile 
                  title={post.frontmatter.title}
                  description={post.frontmatter.description}
                  heroImage={post.frontmatter.heroImage}
                  publishedOn={post.frontmatter.createdAt}
                  url={post.frontmatter.url}
                />
              </li>;
            })
          }
        </ul>
      </Content>
    </main>
    <Footer />
  </Body>
</html>
