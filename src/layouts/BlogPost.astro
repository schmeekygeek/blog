---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Body from '../components/Body.astro'
import Content from '../components/Content.astro'
import { SITE_TITLE } from '../consts'
import { Image } from '@astrojs/image/components'

export interface Props {
  content: {
    title: string
    description: string
    createdAt?: string
    updatedAt?: string
    heroImage?: string
    tags: string[]
  }
}

const {
  content: { title, description, heroImage, createdAt }
} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} / ` + title } description={description} image={heroImage} />
  </head>

  <Body>
    <Header />
    <main class="pt-[56px]">
      <Content className="align-center">
        <div class="my-8">
          <Image
            class="border border-slate-300 dark:border-zinc-700 rounded-xl"
            height={680} 
            width={1100} 
            format="jpg"
            aspectRatio={2.0}
            src={heroImage} 
            alt="Thumbnail"
          />
        </div>
        <div class="antialiased inline-block bg-rosePine-rose text-rosePine-overlay bg-rosePine-rose text-rosePine-overlay text-100 px-2 rounded-full font-semibold tracking-wide my-2">Published on {createdAt}</div>
        <div class="text-4xl my-0 font-medium font-cabinet">{title}</div>
        <div class="text-xl opacity-70">{description}</div>
        <hr class="border-top border-zinc-400 my-4"/>
        <slot />
      </Content>
    </main>
    <Footer />
  </Body>
</html>
